<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GetConnectionActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Bluetooth Connection"
        android:id="@+id/connect_button"
        android:onClick="findBluetoothConnection"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" UP "
        android:id="@+id/up_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:onClick="clickUP"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWN"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:onClick="clickDOWN"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEFT"
        android:id="@+id/left_button"
        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/up_button"
        android:layout_toStartOf="@+id/up_button"
        android:onClick="clickLEFT"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:id="@+id/right_button"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/up_button"
        android:layout_toEndOf="@+id/up_button"
        android:onClick="clickRIGHT"/>

    <ece281.joshua.robotcontrol.DisplayScreen
        android:id="@+id/displayScreen"
        android:layout_width="690dp"
        android:layout_height="660dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_from_arduino"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/connect_button"
        android:layout_alignEnd="@+id/connect_button"
        android:layout_marginTop="117dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/text_from_arduino"
        android:layout_alignEnd="@+id/text_from_arduino"
        android:layout_alignLeft="@+id/connect_button"
        android:layout_alignStart="@+id/connect_button"
        android:indeterminate="false" />


</RelativeLayout>
